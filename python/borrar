    print("D-Mostrar listas")
    print("E-Salir")
    opt=input("introduzca una opcion: ")
    match opt:
        case "A":
            fich=input("introduzca el fichero a eliminar ")
            
        case "B":
            print("a")
        case "C":
            print("a")
        case "D":
            print("a")
        case "E":
            print("a")
