import os
listadir=[]
listafich=[]
fich=open("rutas.txt","r")
for i in fich:
    r=i.strip()
    if os.path.isfile(r):
        listafich.append(r)
    elif os.path.isdir(r):
        listadir.append(r)
while True:
    print("A-Eliminar fichero")
